# Production Environment Variables Template
# Copy this to .env.production and fill in the actual values
# DO NOT commit .env.production to git

# ============================================
# DATABASE (REQUIRED)
# ============================================
# Use Vercel Postgres or external PostgreSQL provider
# Format: postgresql://user:password@host:port/database?sslmode=require
# How to get: Vercel Dashboard → Storage → Create Postgres → Copy connection string
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ============================================
# STORAGE - S3 or Cloudflare R2 (REQUIRED)
# ============================================
# Storage type: 's3' for production (local is dev-only)
STORAGE_TYPE="s3"

# AWS S3 Configuration
# Option A: AWS S3
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-bucket-name"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
# Leave AWS_S3_ENDPOINT empty for AWS S3

# Option B: Cloudflare R2
# AWS_REGION="auto"
# AWS_S3_BUCKET="your-bucket-name"
# AWS_ACCESS_KEY_ID="your-r2-access-key-id"
# AWS_SECRET_ACCESS_KEY="your-r2-secret-access-key"
# AWS_S3_ENDPOINT="https://<account-id>.r2.cloudflarestorage.com"

# How to get S3 credentials:
# - AWS: IAM → Users → Create user → Attach S3 policy → Create access key
# - R2: Cloudflare Dashboard → R2 → Manage R2 API Tokens → Create API token

# ============================================
# STRIPE (REQUIRED)
# ============================================
# Get from: Stripe Dashboard → Developers → API keys
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."

# Webhook secret from Stripe Dashboard → Developers → Webhooks → Add endpoint → Copy signing secret
# Endpoint URL: https://quicksync.app/api/payment/webhook
# Events to select: checkout.session.completed, payment_intent.succeeded
STRIPE_WEBHOOK_SECRET="whsec_..."

# ============================================
# PRICING (REQUIRED)
# ============================================
# Prices in cents (e.g., 900 = $9.00)
PRICE_PER_FILE=900
PRICE_PACK_10=2900

# ============================================
# AUTH (REQUIRED)
# ============================================
# Generate a strong random secret: openssl rand -base64 32
JWT_SECRET="your-strong-random-secret-here"

# ============================================
# APP URL (REQUIRED)
# ============================================
NEXT_PUBLIC_APP_URL="https://quicksync.app"

# ============================================
# ADMIN (REQUIRED)
# ============================================
# Comma-separated email addresses for admin access
ADMIN_EMAILS="admin@example.com,admin2@example.com"

# ============================================
# ANALYTICS (OPTIONAL)
# ============================================
# Leave empty if not using Plausible
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="quicksync.app"
